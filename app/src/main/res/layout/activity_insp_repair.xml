<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="back"
            android:padding="15dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="巡检报修"
            android:textColor="#343434"
            android:textSize="20sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_login_button"
            android:gravity="center"
            android:onClick="submitAction"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="14sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#ccc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/selector_login_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="共计0个媒体" />

            <TextView
                android:id="@+id/mediaType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_fu_kuan_bg"
                android:gravity="center"
                android:onClick="dialogChoice"
                android:padding="10dp"
                android:text="请选择媒体类型" />

            <TextView
                android:id="@+id/fault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_fu_kuan_bg"
                android:gravity="center"
                android:onClick="faultAction"
                android:padding="10dp"
                android:visibility="gone"
                android:text="请选择故障类型" />

            <EditText
                android:id="@+id/fault_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:hint="请输入报修数量"
                android:inputType="number"
                android:padding="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/selector_fkxq_line"
                android:layerType="software" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:minHeight="150dp">

                <ImageView
                    android:id="@+id/upload_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#fff" />

                <LinearLayout
                    android:id="@+id/add_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="添加照片"
                        android:textColor="#699bf9"
                        android:textSize="12sp" />

                    <com.ast365.library.listview.FullGridView
                        android:id="@+id/gridview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:numColumns="3" />
                </LinearLayout>


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/selector_fkxq_line"
                android:layerType="software" />

            <LinearLayout
                android:id="@+id/repair_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/repair_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_fu_kuan_bg"
                    android:onClick="SelectRepairUserAction"
                    android:padding="10dp"
                    android:text="维修人：" />


                <TextView
                    android:id="@+id/noti_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_fu_kuan_bg"
                    android:onClick="SelectNotiUserAction"
                    android:padding="10dp"
                    android:text="通知人：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="备注" />

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="top"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="#888"
                    android:textSize="14sp" />
            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/selector_button"
                android:onClick="submitAction"
                android:text="提交"
                android:textColor="#fff"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
