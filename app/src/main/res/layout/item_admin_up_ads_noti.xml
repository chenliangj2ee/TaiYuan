<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/advert_icon"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="#eee"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coding"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="编码：xxxx-xxxx-x"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/station_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="北京站"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/type_size"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="LED 200*200 手机类"
                        android:textColor="#000"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/ads_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="8快"
                        android:textColor="#000"
                        android:textSize="12sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="合同编号"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/contruct_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="12121212121212"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="合同名称"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/contruct_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="12121212"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ads_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="合同编号"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ads_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="12121212121212"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/ads_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="合同名称"
                        android:textColor="#000"
                        android:textSize="12sp" />



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_fkxq_line" />

    </LinearLayout>

    <ImageView
        android:id="@+id/insp_status_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="15dp" />
</FrameLayout>