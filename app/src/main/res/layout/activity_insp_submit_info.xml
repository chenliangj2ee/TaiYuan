<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="back"
            android:padding="15dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="媒体详情"
            android:textColor="#343434"
            android:textSize="20sp" />


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#ccc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/selector_login_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="媒体效果图"
                    android:textColor="#343434"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/advert_icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="#eee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="上刊效果图"
                    android:textColor="#343434"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/advert_icon2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="#eee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/coding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="媒体编码：xxxx-xxxx-x"
                        android:textColor="#343434"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/propery_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="所属车站"
                        android:textColor="#343434"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/size_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="灯箱大小300*300   8个"
                        android:textColor="#343434"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="西安北站-宝鸡南站-东侧墙面"
                        android:textColor="#343434"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/advert_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="lenvovo笔记本"
                        android:textColor="#343434"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="2018-02-03~2018-03-04"
                        android:textColor="#888"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/selector_fkxq_line"
                android:layerType="software" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
