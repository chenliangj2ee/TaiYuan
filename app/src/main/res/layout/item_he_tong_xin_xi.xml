<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0000"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_item_time_bg"
        android:drawableLeft="@drawable/selector_contract_point"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="西安高铁南站灯箱广告合同"
        android:textColor="#fff"
        android:textSize="14sp" />

    <View
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:layout_marginLeft="15dp"
        android:background="#aaa"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_login_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="编号:"
                android:textColor="#000" />

            <TextView
                android:id="@+id/id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200189387917"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="签约日期:"
                android:textColor="#000" />

            <TextView
                android:id="@+id/contract_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:text="2018-01-12"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#e7f1f6"
            android:paddingLeft="10dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="合同额"
                android:textColor="#000" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500万"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="#3089d5"
                android:textSize="15sp" />

            <FrameLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="#fff">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shu_line" />
            </FrameLayout>


            <TextView
                android:id="@+id/pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="累计收款"
                android:textColor="#000" />

            <TextView
                android:id="@+id/pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50万"
                android:layout_weight="1"
                android:textColor="#f62440"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pay_bai_fen_bi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:text="(20%)"
                android:visibility="gone"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:text="北京xxx公司"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/start_end_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2018-1-2~2018-3-23"
                android:textColor="#888"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
