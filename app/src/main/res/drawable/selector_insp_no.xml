<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#fff" />
            <stroke android:width="1px" android:color="#32a4e7" android:dashWidth="0px" android:dashGap="0px" />
            <corners android:bottomLeftRadius="45px" android:bottomRightRadius="0px" android:topLeftRadius="45px" android:topRightRadius="0px" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#fff" />
            <stroke android:width="1px" android:color="#ddd" android:dashWidth="0px" android:dashGap="0px" />
            <corners android:bottomLeftRadius="45px" android:bottomRightRadius="0px" android:topLeftRadius="45px" android:topRightRadius="0px" />
        </shape>
    </item>


</selector>
