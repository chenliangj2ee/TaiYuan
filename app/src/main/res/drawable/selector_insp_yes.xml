<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#32a4e7" />
            <stroke android:width="0px" android:color="#000" android:dashGap="0px" android:dashWidth="0px" />
            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="45px" android:topLeftRadius="0px" android:topRightRadius="45px" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#fff" />
            <stroke android:width="1px" android:color="#32a4e7" android:dashGap="0px" android:dashWidth="0px" />
            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="45px" android:topLeftRadius="0px" android:topRightRadius="45px" />
        </shape>
    </item>


</selector>
